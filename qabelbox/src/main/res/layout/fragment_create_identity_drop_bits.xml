<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <SeekBar
            android:id="@+id/sb_security"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="3"/>

        <de.qabel.android.views.TextViewFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MessageText"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/sb_security"
            android:text="@string/identity_security_low"
            android:height="85dp"
            android:width="140dp"
            android:layout_marginLeft="5dp"/>

        <de.qabel.android.views.TextViewFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            style="@style/MessageText"
            android:layout_below="@id/sb_security"
            android:text="@string/identity_security_high"
            android:width="140dp"
            android:layout_marginRight="5dp"
            android:height="85dp"/>
    </RelativeLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_weight="1"/>

    <de.qabel.android.views.TextViewFont
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:minLines="5"
        android:text="@string/create_identity_select_security"
        style="@style/MessageText"
        android:layout_margin="5dp"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_weight="1"/>

</LinearLayout>




