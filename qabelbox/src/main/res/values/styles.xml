<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
    </style>

    <style name="AppVPITheme" parent="AppTheme">
        <item name="vpiIconPageIndicatorStyle">@style/Widget.IconPageIndicator</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/default_text_color</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:color">@color/white</item>
    </style>

    <style name="BottomBarButton" parent="@style/Widget.AppCompat.Button.Borderless"></style>

    <style name="Button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonSecondary" parent="Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ListViewLoadingText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">@dimen/textsize_empty_view</item>
    </style>

    <!-- style for edit text-->
    <style name="EditText">
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/textsize_edittext</item>
        <item name="android:singleLine">true</item>
    </style>
    <!-- style for standard text message field-->
    <style name="MessageText">
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">@dimen/textsize_normal</item>
    </style>

    <style name="SmallGreyMessageText">
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">@dimen/textsize_small</item>
    </style>

    <style name="TextViewButton" parent="MessageText">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ListIcon">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:contentDescription">@string/item_image</item>
    </style>

    <style name="ListFirstTextLine">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textsize_list_first_line</item>
    </style>

    <style name="LicenceListFirstTextLine" parent="ListFirstTextLine">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/textsize_splash</item>
    </style>

    <style name="ListSecondTextLine">
        <item name="android:textSize">@dimen/textsize_list_second_line</item>
        <item name="android:textColor">@color/grey_text_color</item>
        <item name="android:textColorLink">@color/welcome_button_activated</item>
        <item name="android:textColorLinkInverse">@color/welcome_button_deactivated</item>
    </style>

    <style name="LicenceListSecondTextLine" parent="ListSecondTextLine">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="LicenceButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawableRight">@drawable/chevron_right_white</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:longClickable">true</item>
    </style>

    <style name="ListItemContact">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingRight">@dimen/border_middle</item>
        <item name="android:paddingLeft">@dimen/border_middle</item>
    </style>

    <style name="TextViewButtonSemiTransparent" parent="TextViewButton">
        <item name="android:background">@color/button_semi_transparent</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
    </style>

    <style name="ListItemCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginRight">@dimen/border_middle</item>
        <item name="android:layout_marginLeft">@dimen/border_middle</item>
    </style>


    <style name="Spinner"></style>

    <style name="ActionBarBottomItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textsize_bottom_ab</item>
    </style>

    <style name="BottomSheet.GridItemTitle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="InputLabel" parent="TextAppearance.AppCompat.Caption">
        <item name="android:paddingBottom">@dimen/input_label_vertical_spacing</item>
        <item name="android:paddingLeft">@dimen/input_label_horizontal_spacing</item>
        <item name="android:paddingRight">@dimen/input_label_horizontal_spacing</item>
    </style>
</resources>
