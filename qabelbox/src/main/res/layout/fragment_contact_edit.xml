<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contact_edit_view"
    android:background="@color/background_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <de.qabel.qabelbox.ui.views.SquareFrameLayout
        android:id="@+id/contact_icon_border"
        android:layout_width="wrap_content"
        android:layout_height="100sp"
        android:layout_gravity="center_horizontal"
        android:padding="5sp">

        <de.qabel.qabelbox.ui.views.SquareFrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/identity_circle">

            <de.qabel.qabelbox.ui.views.TextViewFont
                android:id="@+id/tv_initial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_identity_circle_initial" />
        </de.qabel.qabelbox.ui.views.SquareFrameLayout>
    </de.qabel.qabelbox.ui.views.SquareFrameLayout>

    <de.qabel.qabelbox.ui.views.EditTextFont
        android:id="@+id/editTextContactNick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom"
        android:hint="@string/contact_name"
        android:singleLine="true"
        android:textSize="@dimen/textsize_qabel_logo" />

    <de.qabel.qabelbox.ui.views.TextViewFont
        android:id="@+id/editTextContactName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="5dp"
        android:textSize="@dimen/textsize_normal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10sp"
        android:background="@drawable/separator_gray">

        <de.qabel.qabelbox.ui.views.TextViewFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/headline_identities"
            android:textSize="@dimen/textsize_welcome_screen" />
        <Switch
            android:id="@+id/contact_ignored_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:text="@string/action_ignore"
            android:textColor="@color/grey_text_color"
            android:showText="true"
            android:textOff=""
            android:textOn="" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/contact_identities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical" />
</LinearLayout>

