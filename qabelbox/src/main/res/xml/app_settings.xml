<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/feedback">
        <Preference
            android:key="@string/setting_internal_feedback"
            android:summary="@string/debug_send_feedback_to_pm"
            android:title="@string/debug_send_feedback" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/general_settings">
        <CheckBoxPreference
            android:checked="true"
            android:defaultValue="true"
            android:key="@string/settings_key_bugreporting_enabled"
            android:summary="@string/settings_bugreporting_enable_summary"
            android:title="@string/settings_bugreporting" />
        <CheckBoxPreference
            android:checked="true"
            android:defaultValue="true"
            android:key="contact_sync_enabled"
            android:summary="@string/android_contact_sync_text"
            android:title="@string/android_contact_sync"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/settings_headline_boxaccount">
        <Preference
            android:key="@string/setting_account_name"
            android:selectable="false"
            android:summary=""
            android:title="" />
        <Preference
            android:key="@string/setting_box_quota"
            android:selectable="false"
            android:summary=""
            android:title="@string/settings_title_box_quota" />
        <Preference
            android:key="@string/setting_change_account_password"
            android:summary="@string/settings_change_account_password_summary"
            android:title="@string/settings_change_account_password" />
        <Preference
            android:key="@string/setting_logout"
            android:title="@string/logout"
            android:icon="@drawable/account_off" />
    </PreferenceCategory>
</PreferenceScreen>
